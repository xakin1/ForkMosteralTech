<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
<!--    TODO: Hacer que el tamaÃ±o de los layout no este hardcodeado-->
    <TextView
        android:id="@+id/nameRegister"
        android:layout_width="177dp"
        android:layout_height="22dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="117dp"
        android:text="@string/prompt_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastNameRegister"
        android:layout_width="177dp"
        android:layout_height="22dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="117dp"
        android:text="@string/prompt_last_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameRegister" />

    <EditText
        android:id="@+id/passwordRegister"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="117dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/prompt_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmEmailRegister" />

    <EditText
        android:id="@+id/confirmPasswordRegister"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="117dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/prompt_confirm_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordRegister" />

    <Button
        android:id="@+id/confirmButtonRegister"
        android:layout_width="201dp"
        android:layout_height="40dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="60dp"
        android:onClick="onClickRegister"
        android:text="@string/action_register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordRegister" />

    <Button
        android:id="@+id/cancelButtonRegister"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="212dp"
        android:onClick="onClickCancel"
        android:text="@string/action_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordRegister" />

    <EditText
        android:id="@+id/emailRegister"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="117dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/prompt_email"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameRegister" />

    <EditText
        android:id="@+id/confirmEmailRegister"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="117dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/prompt_confirm_email"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailRegister" />

</androidx.constraintlayout.widget.ConstraintLayout>