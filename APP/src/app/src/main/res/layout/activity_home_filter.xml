<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <include
        android:id="@+id/action_bar"
        layout="@layout/activity_action_bar"
        tools:context=".ActionBarActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <GridLayout
        android:layout_below="@id/action_bar"
        android:id="@+id/gridLayout_precios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text_precios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            android:text="Precio"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_precio_desde"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:hint="Desde"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_precio_hasta"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:hint="Hasta"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

    </GridLayout>

    <TextView
        android:layout_below="@id/gridLayout_precios"
        android:id="@+id/ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:layout_below="@id/ubicacion"
        android:id="@+id/edit_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce una ubicación"
        android:textSize="16sp"
        android:inputType="text" />

    <TextView
        android:layout_below="@id/edit_ubicacion"
        android:id="@+id/numero_habitaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de habitaciones"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/segmentedButtonGroup_opciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numero_habitaciones"
        app:singleSelection="true"
        app:backgroundTint="@android:color/transparent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_nuevo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nuevo"
            android:textColor="@color/teal_200"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_seminuevo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seminuevo"
            android:textColor="@color/teal_200"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_segunda_mano"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Segunda mano"
            android:textColor="@color/teal_200"
            />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <GridLayout
        android:layout_below="@id/segmentedButtonGroup_opciones"
        android:id="@+id/gridLayout_tamaño"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text_Tamaño"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            android:text="Tamaño"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_tamaño_desde"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:hint="Desde"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_tamaño_hasta"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:hint="Hasta"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

    </GridLayout>

    <Button
        android:id="@+id/applyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar filtros"
        android:layout_alignParentBottom="true"
        >
    </Button>

</RelativeLayout>